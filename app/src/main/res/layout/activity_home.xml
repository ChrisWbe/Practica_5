<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.christianquintero.practica_5.home"
    android:id="@+id/contenedorDrawer">
    <!--menu lateral-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/textViewStyle.titulos"
                android:text="@string/tit_Home" />
            <ImageView
                style="@style/imageViewStyle"
                android:src="@drawable/alcaldia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
            <TextView
                style="@style/textViewStyle.contenido"
                android:text="@string/guatape"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </ScrollView>
    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:foregroundGravity="left"
        android:layout_gravity="start"
        android:id="@+id/menuIzq"
        android:choiceMode="singleChoice"
        android:background="@color/common_plus_signin_btn_text_dark_disabled"/>





</android.support.v4.widget.DrawerLayout>

    <!-- layout_gravity start me inicia mi lista en la parte inicial-->
